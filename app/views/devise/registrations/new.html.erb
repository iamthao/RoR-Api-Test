<div class="container" style="text-align: center;padding-bottom: 0;">
  <image src="/images/logo.png" style="height: 100px;display: block;  margin-left: auto ; margin-right: auto;"/>
  <h2>Đấu Trường Tiếng Anh</h2>
  <hr/>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container" id="login">
    <div class="form-group">
      <label for="user_full_name"><b>Tên đầy đủ <span style="color: red">*</span></b></label>
      <div class="high-light">
        <input class="form-control-error" type="text" name="user[full_name]" id="user_full_name"  autofocus="autofocus">
       </div>
    </div>

    <div class="form-group">
      <label for="user_email"><b>Email <span style="color: red">*</span></b></label>
      <div class="high-light">
        <input class="form-control-error" type="text" name="user[email]" id="user_email" >
      <div>
    </div>

    <div class="form-group">
      <label for="user_password"><b>Mật khẩu <span style="color: red">*</span></b></label>
      <div class="high-light">
        <input  class="form-control-error" autocomplete="off" type="password" name="user[password]" id="user_password">
      </div>
    </div>

    <div class="form-group">
      <label for="user_password_confirmation"><b>Xác nhận mật khẩu <span style="color: red">*</span></b></label>
      <div class="high-light">
        <input class="form-control-error" autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation">
      </div>
    </div>
    <p>Bằng cách tạo một tài khoản bạn đồng ý với <a href="#">Điều khoản & Bảo mật</a> của chúng tôi.</p>

    <p></p>
    <div class="clearfix">
      <button type="submit" class="sign-up-btn">Đăng ký</button>
    </div>

    <p></p>
    Đã có tài khoản? <%= link_to "Đăng nhập.", new_session_path(resource_name) %><br />
  </div>
<% end %>


<script type="text/javascript">
  $(document).ready(function () {
      $("#new_user").validate({
      //error place
      //  errorPlacement: function (error, element) {
      //    error.insertBefore(element);
      //  },
      //adding rule
        rules: {
          "user[full_name]":{
            required: true,
            maxlength: 50,
            minlength: 2
          },
          // email is required with format
          "user[email]": {
            required: true,
            maxlength: 150,
            email: true
          },
          // password is required
          "user[password]": {
            required: true,
            maxlength: 50,
            minlength: 6
          },
          // password_confirmation is required and is the same with password
          "user[password_confirmation]": {
            required: true,
            equalTo: "#user_password",
            maxlength: 150
          }
        },
        // error messages
        messages: {
          "user[full_name]":{
            required: "Tên đầy đủ không được để trống.",
            maxlength: "Tên đầy đủ tối đa 50 ký tự.",
            minlength: "Tên đầy đủ tối thiểu 2 ký tự."
          },
          "user[email]":{
            required: "Email không được để trống.",
            email: "Email không hợp lệ."
          },
          "user[password]": {
            required: "Mật khẩu không được để trống.",
            maxlength: "Mật khẩu tối đa 50 ký tự.",
            minlength: "Mật khẩu tối thiểu 6 ký tự."
          },
          "user[password_confirmation]": {
            required: "Xác nhận mật khẩu không được để trống.",
            equalTo: "Xác nhận mật khẩu không trùng với mật khẩu."
          }
        },
        errorElement: "em",
        errorPlacement: function ( error, element ) {
          // Add the `help-block` class to the error element
          error.addClass( "help-block" );

          if ( element.prop( "type" ) === "checkbox" ) {
            error.insertAfter( element.parent( "label" ) );
          } else {
            error.insertAfter( element );
          }
        },
        highlight: function ( element, errorClass, validClass ) {
          $( element ).parents( ".high-light" ).addClass( "has-error" ).removeClass( "has-success" );
        },
        unhighlight: function (element, errorClass, validClass) {
          $( element ).parents( ".high-light" ).addClass( "has-success" ).removeClass( "has-error" );
        }
    });
  });
</script>


